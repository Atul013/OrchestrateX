# Simple nginx frontend
FROM nginx:alpine

# Copy built assets
COPY dist/ /usr/share/nginx/html/

# Create nginx config for SPA
RUN echo 'server { \
    listen 8080; \
    server_name _; \
    location / { \
        root /usr/share/nginx/html; \
        index index.html; \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]