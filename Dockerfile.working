FROM python:3.11-slim

WORKDIR /app

# Install requirements
RUN pip install flask flask-cors requests gunicorn

# Copy the working API
COPY working_simple_api.py .

ENV PORT=8080
ENV PYTHONUNBUFFERED=1

EXPOSE 8080

CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "2", "--timeout", "120", "working_simple_api:app"]